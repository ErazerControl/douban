<view class="search-group" hover-class="none" hover-stop-propagation="false">
  <view class="search-outter" hover-class="none" hover-stop-propagation="false">
    <navigator wx:if="{{mode=='1'}}" class=".search-inner" target="" url="../search/search" hover-class="navigator-hover" open-type="navigate">
      <!-- <view class="" hover-class="none" hover-stop-propagation="false"> -->
        <image class="" src="../../images/search.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
          
        <view class="" hover-class="none" hover-stop-propagation="false">
          搜索
        </view>
      <!-- </view> -->
          
    </navigator>
    <view wx:else class="input-group">
      <input class="search-input" type="text" bindinput="onInputEvent" placeholder="搜索"></input>
    </view>
    
  </view>  
</view>
  